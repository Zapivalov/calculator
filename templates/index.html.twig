{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto" style="width: 50%;">
    <div class="row">
        <div class="col-sm">
            <h1 class="mb-0">Калькулятор</h1>
        </div>
    </div>

    <form action="{{ path('app.calculate') }}" method="post">
        <div class="row py-3">
            <div class="col-sm-3">
                <div class="form-group">
                    <label for="exampleInputEmail1">Аргумент 1</label>
                    <input type="text" required="required" class="form-control" id="argument_1" name="argument_1">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Операция</label>
                    <select class="form-control" id="operation" name="operation">
                        <option value="+">+</option>
                        <option value="-">-</option>
                        <option value="*">*</option>
                        <option value="/">/</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label for="exampleInputEmail1">Аргумент 2</label>
                    <input type="text" required="required" class="form-control" id="argument_2" name="argument_2">
                </div>
            </div>
            <div class="col-sm-4 align-self-end">
                <button class="w-100 btn btn-primary" type="submit">Вычислить</button>
            </div>
        </div>
    </form>
    {% for message in app.flashes('success') %}
        <div class="row">
            <div class="col-sm">
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            </div>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="row">
            <div class="col-sm">
                <div class="alert alert-danger" role="alert">
                    {{ message }}
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}